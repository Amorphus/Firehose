<div class="stolen-frosty span7 offset4 text-center">

	<h1 class="stolen-h1">
		Save Your Lesson
	</h1>

	<br/>

		<%= simple_form_for @pic do |f| %>
			<%= f.input :lesson %>
			<%= f.input :image, label: "Add your image" %>
			<%= f.input :emotion, label: "How did you feel?", placeholder: 'Awful,Decent,Awesome' %>
			<%= f.input :learned, label: "What did you learn?", placeholder: 'HTML,CSS,Ruby,Rails,How to Read,ABCs'%>

			<%= submit_tag "Save", :class => 'btn btn-success btn-large' %>
		<% end %>

</div>
<div class="stolen-frosty span6 offset3 text-center">
	<h1 class="stolen-h1">
		Lesson: <%= @pic.lesson %>
	</h1>

	<%= image_tag @pic.image %>

	<h2>
		I felt: <%= @pic.emotion %>
	</h2>

	<br/>

	<h2>
		I learned: <%= @pic.learned %>
	</h2>

	<%= link_to 'Back', pics_path, :class => 'btn btn-warning btn-large' %>

	<%= link_to 'Delete', pic_path(@pic), :method => :delete, :class => 'btn btn-large btn-danger', :confirm => 'Are you sure you want to delete this?' %>

	<%= link_to 'Edit', edit_pic_path(@pic), :class => 'btn btn-warning btn-large' %>

</div>